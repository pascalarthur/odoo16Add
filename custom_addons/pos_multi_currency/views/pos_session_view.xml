<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_session_form_inherited" model="ir.ui.view">
        <field name="name">pos.session.form.inherited</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <!-- Place the field where you want it in the form view -->
            <!-- Example: Adding it below a specific field -->
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="alternative_currency_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
