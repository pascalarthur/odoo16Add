<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_transport_order_form" model="ir.ui.view">
        <field name="name">transport.order.form</field>
        <field name="model">transport.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,received" readonly="1"/>
                    <button name="confirm_price" type="object" invisible="state != 'sent'" string="Confirm Price"/>
                </header>
                <group string="Start Address">
                    <field name="route_start_street" placeholder="Street..." nolabel="1" class="o_address_street"/>
                    <field name="route_start_street2" placeholder="Street 2..." nolabel="1" class="o_address_street"/>
                    <field name="route_start_city" placeholder="City"  nolabel="1" class="o_address_city"/>
                    <field name="route_start_state_id" class="o_address_state" nolabel="1" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'default_country_id': route_start_country_id}"/>
                    <field name="route_start_zip" placeholder="ZIP" nolabel="1" class="o_address_zip"/>
                    <field name="route_start_country_id" placeholder="Country" nolabel="1" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                </group>

                <group string="Delivery Address">
                    <field name="route_end_street" placeholder="Street..." nolabel="1" class="o_address_street"/>
                    <field name="route_end_street2" placeholder="Street 2..." nolabel="1" class="o_address_street"/>
                    <field name="route_end_city" placeholder="City" nolabel="1" class="o_address_city"/>
                    <field name="route_end_state_id" class="o_address_state" nolabel="1" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'default_country_id': route_end_country_id}"/>
                    <field name="route_end_zip" placeholder="ZIP" nolabel="1" class="o_address_zip"/>
                    <field name="route_end_country_id" placeholder="Country" nolabel="1" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                </group>

                <group string="Shipping Details">
                    <field name="container_count" placeholder="Container Count..."/>
                    <field name="additional_details" placeholder="Details..."/>
                </group>
                <group string="Logistician">
                    <field name="partner_id"/>
                </group>
                <field name="truck_ids">
                            <tree>
                                <field name="truck_number"/>
                                <field name="max_load"/>
                                <field name="price"/>
                            </tree>
                        </field>
                <group string="Logistician Information">
                    <field name="price" readonly="state in 'received'"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_transport_order_tree" model="ir.ui.view">
        <field name="name">transport.order.tree</field>
        <field name="model">transport.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

                <field name="container_count"/>
                <field name="additional_details"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="state" widget="statusbar"/>

                <field name="route_start_street" optional="hide"/>
                <field name="route_start_street2" optional="hide"/>
                <field name="route_start_city" optional="hide"/>
                <field name="route_start_state_id" optional="hide"/>
                <field name="route_start_zip" optional="hide"/>
                <field name="route_start_country_id" optional="hide"/>
                <field name="route_end_street" optional="hide"/>
                <field name="route_end_street2" optional="hide"/>
                <field name="route_end_city" optional="hide"/>
                <field name="route_end_state_id" optional="hide"/>
                <field name="route_end_zip" optional="hide"/>
                <field name="route_end_country_id" optional="hide"/>
            </tree>
        </field>
    </record>


    <record id="action_transport_order_form" model="ir.actions.act_window">
        <field name="name">Requests for Transport</field>
        <field name="res_model">transport.order</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
