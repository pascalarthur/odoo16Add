<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,transport,seal,sent,sale"/>
            </xpath>
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_find_transport" string="Find Transport" type="object" class="oe_highlight"/>
                    <button name="action_seal" string="Seal" type="object" class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>