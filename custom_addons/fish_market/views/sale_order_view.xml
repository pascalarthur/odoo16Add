<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,transport,seal,sent,sale"/>
            </xpath>
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="set_transport_state" string="Transport" type="object" class="oe_highlight" invisible="state in ['transport', 'seal', 'sent']"/>
                    <button name="action_find_transport" string="Find Transport" type="object" class="oe_highlight" invisible="state not in ['transport']"/>
                    <button name="set_seal_state" string="Seal" type="object" class="oe_highlight" invisible="state in ['seal', 'sent']"/>
                    <button name="set_sent_state" string="Send Quotation" type="object" class="oe_highlight" invisible="state in ['sent']"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <group>
                    <field name="transport_company_ids" widget="many2many_tags" invisible="state in ['draft']" readonly="state != 'transport'"/>
                    <field name="seal_number" invisible="state in ['draft', 'transport']" readonly="state != 'seal'"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="location_id"/>
            </xpath>
        </field>
    </record>
</odoo>