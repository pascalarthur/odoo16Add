<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_logistic_tree" model="ir.ui.view">
        <field name="name">product.pricelist.item.tree.inherit</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <header>
                    <button string="Buy" class="oe_highlight" type="object" name="action_buy"/>
                </header>
                <field name="partner_id"/>
            </xpath>
        </field>
    </record>

    <record id="fish_prices_walvis_bay_action" model="ir.actions.act_window">
        <field name="name">Pricelist - Walvis Bay</field>
        <field name="res_model">product.pricelist.item</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('pricelist_id.name', '=', 'WvB USD pricelist')]</field>
    </record>

    <record id="fish_prices_zimbabwe_action" model="ir.actions.act_window">
        <field name="name">Pricelist - Zimbabwe</field>
        <field name="res_model">product.pricelist.item</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('pricelist_id.name', '=', 'Zambia USD Pricelist')]</field>
    </record>
</odoo>
