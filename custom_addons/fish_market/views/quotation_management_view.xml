<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_quotation_management_form" model="ir.ui.view">
        <field name="name">quotation.management.form</field>
        <field name="model">quotation.management</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage" widget="statusbar" statusbar_visible="quotations,transports,sealing,arrival"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="purchase_order_ids">
                            <tree>
                                <!-- Fields of purchase.order you want to display -->
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
