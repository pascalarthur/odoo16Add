<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_truck_seal_wizard_form" model="ir.ui.view">
        <field name="name">seal.wizard.form</field>
        <field name="model">seal.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="truck_id"/>
                    <field name="seal_number"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_action" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_truck_seal_wizard" model="ir.actions.act_window">
        <field name="name">Truck seal</field>
        <field name="res_model">seal.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_truck_seal_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
