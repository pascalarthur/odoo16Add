<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_purchase_order_report_all" model="ir.actions.act_window">
        <field name="name">Price Analysis</field>
        <field name="res_model">fish_market.report.image</field>
        <field name="view_mode">tree,form</field>
        <field name="views" eval="[(ref('view_purchase_report_form'), 'form')]"/>
    </record>

    <record id="view_purchase_report_form" model="ir.ui.view">
        <field name="name">purchase.report.form</field>
        <field name="model">fish_market.report.image</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name='image_base64' widget="image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="purchase_report_main" name="Reporting" parent="fish_market.test_menu_root" sequence="99" groups="base.group_user"/>
    <menuitem id="purchase_report" name="Purchase" parent="purchase_report_main" sequence="99" groups="base.group_user" action="action_purchase_order_report_all"/>

</odoo>
