<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Create a new form view for account.account.currency.exchange -->
    <record id="view_account_journal_currency_exchange_form" model="ir.ui.view">
        <field name="name">account.account.currency.exchange.form</field>
        <field name="model">account.account.currency.exchange</field>
        <field name="arch" type="xml">
            <form>
                <!-- Define the fields you want to display -->
                <header>
                    <button type="object" name="action_confirm" class="oe_highlight">Confirm</button>
                    <button type="object" name="action_done" class="oe_highlight">Done</button>
                    <button type="object" name="action_cancel" class="oe_highlight">Cancel</button>

                    <field name="state" widget="statusbar"/>
                </header>
                <group>
                    <field name="location_id"/>
                    <field name="exchange_partner_id"/>
                    <field name="journal_id"/>
                    <field name="destination_journal_id"/>
                    <field name="amount"/>
                    <field name="exchange_rate"/>
                    <field name="amount_in_other_currency"/>
                    <field name="currency_id"/>
                    <field name="destination_currency_id"/>
                    <field name="date"/>
                    <field name="note"/>
                    <field name="account_move_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_account_journal_currency_exchange_tree" model="ir.ui.view">
        <field name="name">account.account.currency.exchange.tree</field>
        <field name="model">account.account.currency.exchange</field>
        <field name="arch" type="xml">
            <tree>
                <field name="location_id"/>
                <field name="exchange_partner_id"/>
                <field name="journal_id"/>
                <field name="destination_journal_id"/>
                <field name="amount"/>
                <field name="exchange_rate"/>
                <field name="amount_in_other_currency"/>
                <field name="currency_id"/>
                <field name="destination_currency_id"/>
                <field name="date"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="action_account_account_currency_exchange_tree" model="ir.actions.act_window">
        <field name="name">Exchange Transactions</field>
        <field name="res_model">account.account.currency.exchange</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>